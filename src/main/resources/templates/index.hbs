{{#partial "content"}}

    <h1>Plants in database</h1>
    {{#if plants}}

    {{#each plants }} <!--loop-->

    <h3>Plant {{ plantName }}:</h3><br>
    <p><a href="/plants/{{plantId}}">read more...</a></p>

    {{/each}}

    {{else}}

    <p>No plants in database</p>

    {{/if}}

    <a href="/plants/new"><button type="submit" class="btn btn-default">Create a new Plant</button></a>

{{/partial}}

{{> layout.hbs}}